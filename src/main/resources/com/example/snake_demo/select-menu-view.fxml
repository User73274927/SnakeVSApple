<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


 <HBox prefWidth="400" prefHeight="400" alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.snake_demo.controller.SelectMenuController">
     <padding>
         <Insets bottom="40" left="40" right="40" top="40" />
     </padding>
     <VBox alignment="CENTER" spacing="10">
         <ImageView fitHeight="100" fitWidth="100">
         <image>
            <Image url="@../../../pictires/2.png" />
         </image>
      </ImageView>
         <Label text="Классическая" />
         <Button text="Играть" onAction="#OnPlayClassicPressed"/>
     </VBox>
     <VBox alignment="CENTER" spacing="10">
         <ImageView fitHeight="100.0" fitWidth="100.0">
         <image>
            <Image url="@../../../pictires/3.png" />
         </image>
      </ImageView>
         <Label text="Викторина" />
         <Button text="Играть" onAction="#OnPlayQuestionPressed"/>
     </VBox>
     <VBox alignment="CENTER" spacing="10">
         <ImageView fitHeight="100.0" fitWidth="100.0">
         <image>
            <Image url="@../../../pictires/1.png" />
         </image>
      </ImageView>
         <Label text="Составить слово" />
         <Button text="Играть" onAction="#OnPlayWordPressed"/>
     </VBox>
 </HBox>
